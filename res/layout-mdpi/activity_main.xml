            <Button
                android:id="@+id/button0"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="0"
                android:text="@string/no0" />

            <Button
                android:id="@+id/btnBracket"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="brac"
                android:text="@string/brackets" />

            <Button
                android:id="@+id/btnEqual"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/oragebtn"
                android:onClick="calc"
                android:text="@string/equalto" />
        </LinearLayout>
    </LinearLayout>

