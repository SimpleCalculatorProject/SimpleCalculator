
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" >

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/view"
                style="@style/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:background="@drawable/digis"
                android:clickable="false"
                android:gravity="center_vertical"
                android:text="@string/no0"
                android:textColor="#000000"
                android:textSize="25sp" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/linearLayout112"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/buttonClear"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:background="@drawable/greybtn"
                android:onClick="clear"
                android:text="@string/clear"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnErase"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".50"
                android:background="@drawable/greybtn"
                android:enabled="true"
                android:onClick="erase"
                android:text="@string/backrep"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/btnPotens"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="tosecond"
                android:tag="Â²"
                android:text="@string/potency" />

            <Button
                android:id="@+id/btnSqrRoot"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="squeroot"
                android:tag="@string/squareroot"
                android:text="@string/squareroot" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="doact"
                android:tag="@string/division"
                android:text="@string/division" />

            <Button
                android:id="@+id/btnMulti"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="doact"
                android:tag="@string/multiply"
                android:text="@string/multiply" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/button7"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="7"
                android:text="@string/no7" />

            <Button
                android:id="@+id/button8"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="8"
                android:text="@string/no8" />

            <Button
                android:id="@+id/button9"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="9"
                android:text="@string/no9" />

            <Button
                android:id="@+id/btnPlus"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="doact"
                android:tag="+"
                android:text="@string/plus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/button4"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="4"
                android:text="@string/no4" />

            <Button
                android:id="@+id/button5"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="5"
                android:text="@string/no5" />

            <Button
                android:id="@+id/button6"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="6"
                android:text="@string/no6" />

            <Button
                android:id="@+id/btnMinus"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="doact"
                android:tag="-"
                android:text="@string/minus" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/button1"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="1"
                android:text="@string/no1" />

            <Button
                android:id="@+id/button2"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="2"
                android:text="@string/no2" />

            <Button
                android:id="@+id/button3"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="3"
                android:text="@string/no3" />

            <Button
                android:id="@+id/btnAns"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="ans"
                android:text="@string/answer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnPoint"
                style="@style/btn"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight=".25"
                android:background="@drawable/csbtn"
                android:onClick="don"
                android:tag="."
